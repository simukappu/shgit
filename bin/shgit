#!/bin/bash

################################################################################
# shgit: Shell script tools to operate git repository from the command line    #
#                                                                              #
# @auther: Shota Yamazaki                                                      #
################################################################################

function usage() {
cat <<_EOT_
Usage:
  shgit [<u|update> | <dl|deletelocal> | <dr|deleteremote> | <p|prepare>] [-h | <options>]

Description:
  shgit: shell script tools to operate git repository from command line

Commands:
  <u|update>        Update your local and remote repositories to upstream repository
  <dl|deletelocal>  Delete local branches with confirmation
  <dr|deleteremote> Delete remote branches with confirmation
  <p|prepare>       Prepare new development branch

_EOT_
exit 1
}

COMMAND=$1
case $COMMAND in
  u|update)
    bash `dirname $0`/scripts/shgit-update-self-repositoty.sh "$@"
    ;;
  dl|deletelocal)
    bash `dirname $0`/scripts/shgit-delete-local-branches.sh "$@"
    ;;
  dr|deleteremote)
    bash `dirname $0`/scripts/shgit-delete-remote-branches.sh "$@"
    ;;
  p|prepare)
    bash `dirname $0`/scripts/prepare-develpment-branch.sh "$@"
    ;;
  *)
    usage
    ;;
esac
