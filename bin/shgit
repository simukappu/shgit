#!/bin/bash

################################################################################
# shgit: Shell script tools to operate git repository from the command line    #
#                                                                              #
# @auther: Shota Yamazaki                                                      #
################################################################################

function usage() {
cat <<_EOT_
Usage:
  shgit [<update> | <deleteremote> | <deletelocal> | <prepare>] [-h | <options>]

Description:
  shgit: shell script tools to operate git repository from command line

Commands:
  <update>       Update your local and remote repositories to upstream repository
  <deletelocal>  Delete local branches with confirmation
  <deleteremote> Delete remote branches with confirmation
  <prepare>      Prepare new development branch

_EOT_
exit 1
}

COMMAND=$1
case $COMMAND in
  update)
    bash `dirname $0`/scripts/shgit-update-self-repositoty.sh "$@"
    ;;
  deletelocal)
    bash `dirname $0`/scripts/shgit-delete-local-branches.sh "$@"
    ;;
  deleteremote)
    bash `dirname $0`/scripts/shgit-delete-remote-branches.sh "$@"
    ;;
  prepare)
    bash `dirname $0`/scripts/prepare-develpment-branch.sh "$@"
    ;;
  *)
    usage
    ;;
esac
